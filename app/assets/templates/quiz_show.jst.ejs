<h1><strong>Birds of <%= region.name() %></strong></h1>

<section class="quiz-window group">
  <div class="quiz-score"><%= quiz.escape('score') %></div>
  <div class="quiz-progress group">
    <div class="unanswered"> </div><div class="unanswered"> </div>
    <div class="unanswered"> </div><div class="unanswered"> </div>
    <div class="unanswered"> </div><div class="unanswered"> </div>
    <div class="unanswered"> </div><div class="unanswered"> </div>
    <div class="unanswered"> </div><div class="unanswered"> </div>
  </div>


    <!-- <%= parseInt(quiz.escape('progress')) + 1 %>/10 -->

  <div class='audio-box'>

    <div class='fade-box'>
    <%= question.get('correct_answer').common_name %>'s song here

    <audio src="<%=question.get('audio_url')%>" controls="true">
      Your browser does not support the audio player element
      (try Chrome or Safari)
    </audio>

    Recorded by <%= question.escape('recordist') %>
    Recording info and license at <%= question.escape('info_url') %>
    </div>

  </div>

  <section class="flash-box"></section>

  <section class="answer-choices">
    <ul>
      <% question.answerChoices().forEach(function (answer) { %>
        <li>
          <button class="answer" data-id="<%= answer.id %>">
            <%= answer.common_name %>
          </button>
        </li>
      <% }) %>
    </ul>
  </section>
</section>

<h3><strong><%= region.name() %> &nbsp;<span class="quiz-level">Lv. <%= quiz.escape('level') %></span></strong></h3>

<section class="quiz-window group">



  <div class='audio-box'>

    <div class='fade-box'>
      <div class='fade-box-top'>
        <span class="what-do-you-hear"><strong>WHAT DO YOU HEAR?</strong></span>
        <div class="quiz-progress group">
          <div class="unanswered"> </div><div class="unanswered"> </div>
          <div class="unanswered"> </div><div class="unanswered"> </div>
          <div class="unanswered"> </div><div class="unanswered"> </div>
          <div class="unanswered"> </div><div class="unanswered"> </div>
          <div class="unanswered"> </div><div class="unanswered"> </div>
        </div>
      </div>

      <span class="question-mark">?</span>
      <img class="bird-silhouette" src="bird-silhouette.png">

      <audio src="<%=question.get('audio_url')%>" controls="true" autoplay="true">
        Your browser does not support the audio player element
        (try Chrome or Safari)
      </audio>

      <span class="audio-info">
        Recorded by <%= question.escape('recordist') %>. Info and
        license available at
        <a href="<%= question.escape('info_url') %>">
          <%= question.escape('info_url') %>
        </a>.
      </span>
    </div>

  </div>

  <section class="flash-box"></section>

  <section class="answer-choices">
    <ul class= "group">
      <% question.answerChoices().forEach(function (answer) { %>
        <li>

          <% if (answer.common_name.length <= 26) { %>
            <button class="button button-green answer" data-id="<%= answer.id %>">
              <%= answer.common_name %>
            </button>
          <% } else { %>
            <button class="button button-green answer answer-small" data-id="<%= answer.id %>">
              <%= answer.common_name %>
            </button>
          <% } %>
        </li>
      <% }) %>
    </ul>
  </section>
</section>

<div class="ping"></div>

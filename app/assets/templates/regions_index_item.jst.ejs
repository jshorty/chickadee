<% var imgNum = Math.floor(Math.random() * 3).toString() %>

<div class="region-level">LV <%= region.escape('level') %></div>

<img class="region-img" src="<%=region.get('image')%>">

<% if (region.name().length > 40) { %>
  <p>
    <%= region.name().slice(0, 40) + "..." %>
    <small class="region-level-list">
      (LV <%= region.escape('level') %>)
    </small>
  </p>
<% } else { %>
  <p>
    <%= region.name() %>
    <small class="region-level-list">
      (LV <%= region.escape('level') %>)
    </small>
  </p>
<% } %>
